<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="win.mortalliao.win.mortalliao.test.mapper.TestMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="win.mortalliao.win.mortalliao.test.entity.Test">
        <result column="id" property="id"/>
        <result column="version" property="version"/>
        <result column="is_deleted" property="isDeleted"/>
        <result column="created_by" property="createdBy"/>
        <result column="created_dt" property="createdDt"/>
        <result column="updated_by" property="updatedBy"/>
        <result column="updated_dt" property="updatedDt"/>
        <result column="name" property="name"/>
        <result column="address" property="address"/>
        <result column="sex" property="sex"/>
        <result column="birthday_dt" property="birthdayDt"/>
        <result column="mobile" property="mobile"/>
        <result column="score" property="score"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
	id,
	version,
	is_deleted AS isDeleted,
	created_by AS createdBy,
	created_dt AS createdDt,
	updated_by AS updatedBy,
	updated_dt AS updatedDt,
        name, address, sex, birthday_dt AS birthdayDt, mobile, score
    </sql>

    <delete id="delete">
        DELETE FROM win.mortalliao.test WHERE id = #{id}
    </delete>

    <delete id="deleteTest">
        DELETE FROM win.mortalliao.test
        <where>
            <if win.mortalliao.test="id != null">
                id=#{id}
            </if>
            <if win.mortalliao.test="id2 != null">
               and id=#{id2}
            </if>
        </where>
    </delete>

</mapper>
